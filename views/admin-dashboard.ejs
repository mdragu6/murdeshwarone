<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - MurdeshwarOne</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="header">
        <nav class="navbar">
            <a href="/" class="logo">üïâÔ∏è MurdeshwarOne Admin</a>
            <ul class="nav-links">
                <li><a href="/">View Site</a></li>
                <li><a href="/admin/logout" class="btn-logout">Logout</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <div class="admin-header">
            <h1>Admin Dashboard</h1>
        </div>
        
        <div class="dashboard-stats">
            <div class="stat-card">
                <div class="stat-number"><%= pendingServices.length %></div>
                <div class="stat-label">Pending Approvals</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= approvedServices.length %></div>
                <div class="stat-label">Approved Services</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= categories.length %></div>
                <div class="stat-label">Categories</div>
            </div>
        </div>

        <!-- Add New Service (Admin) -->
        <div class="section">
            <h2>‚ûï Add New Service (Admin)</h2>
            <form action="/admin/add-service" method="POST" style="max-width: 800px;">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                    <div class="form-group">
                        <label for="name">Service Name</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select id="category" name="category" required>
                            <% categories.forEach(cat => { %>
                                <option value="<%= cat %>"><%= cat %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" required style="min-height: 80px;"></textarea>
                </div>
                
                <div class="form-group">
                    <label for="contact">Contact Number</label>
                    <input type="tel" id="contact" name="contact" required>
                </div>
                
                <button type="submit" class="btn-submit">Add Service (Approved Immediately)</button>
            </form>
        </div>

        <!-- Pending Approvals -->
        <div class="section">
            <h2>‚è≥ Pending Approvals (<%= pendingServices.length %>)</h2>
            
            <% if(pendingServices.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Contact</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pendingServices.forEach(service => { %>
                            <tr>
                                <td><strong><%= service.name %></strong></td>
                                <td><%= service.category %></td>
                                <td><%= service.description %></td>
                                <td><%= service.contact %></td>
                                <td>
                                    <form action="/admin/approve/<%= service.id %>" method="POST" style="display: inline;">
                                        <button type="submit" class="btn-approve">‚úì Approve</button>
                                    </form>
                                    <form action="/admin/reject/<%= service.id %>" method="POST" style="display: inline;">
                                        <button type="submit" class="btn-reject">‚úó Reject</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p style="text-align: center; color: #6b7280; padding: 2rem;">No pending services to approve.</p>
            <% } %>
        </div>

        <!-- Approved Services -->
        <div class="section">
            <h2>‚úÖ Approved Services (<%= approvedServices.length %>)</h2>
            
            <% if(approvedServices.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Contact</th>
                            <th>Added By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% approvedServices.forEach(service => { %>
                            <tr>
                                <td><strong><%= service.name %></strong></td>
                                <td><%= service.category %></td>
                                <td><%= service.description %></td>
                                <td><%= service.contact %></td>
                                <td><span class="<%= service.addedBy === 'admin' ? 'status-approved' : 'status-pending' %>"><%= service.addedBy %></span></td>
                                <td>
                                    <form action="/admin/delete/<%= service.id %>" method="POST" style="display: inline;">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this service?')">üóëÔ∏è Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p style="text-align: center; color: #6b7280; padding: 2rem;">No approved services yet.</p>
            <% } %>
        </div>
    </div>

    <footer class="footer">
        <p>&copy; 2024 MurdeshwarOne. Your trusted local service and tourism platform.</p>
    </footer>
</body>
</html>
