<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>MurdeshwarOne</title>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&family=Inter:wght@400;500&display=swap" rel="stylesheet">

<style>
:root {
  --primary:#0A4A78; --bg:#F1F5F9; --card:#fff;
  --text:#0F172A; --muted:#64748B;
}
body{margin:0;font-family:Inter;background:var(--bg);padding-bottom:100px}
header{background:#083A5A;color:#fff;padding:1rem;display:flex;justify-content:space-between}
.search{padding:1rem;background:#fff}
.search input{width:100%;padding:1rem;border-radius:14px;border:none}
.categories{display:flex;gap:.7rem;padding:1rem}
.cat{padding:.6rem 1rem;border-radius:999px;background:#fff;font-weight:600;cursor:pointer}
.cat.active{background:var(--primary);color:#fff}
.section{padding:1rem}
.card{background:#fff;border-radius:16px;padding:1rem;margin-bottom:1rem;box-shadow:0 8px 20px rgba(0,0,0,.1)}
.card-top{display:flex;justify-content:space-between}
.card-details{color:var(--muted);margin:.4rem 0}
.actions{display:flex;gap:.5rem}
button{flex:1;padding:.6rem;border:none;border-radius:10px;font-weight:600;cursor:pointer}
.call{background:#16A34A;color:#fff}
#noResults{text-align:center;color:#64748B;display:none}
</style>
</head>

<body>

<header>
  <h2>MurdeshwarOne</h2>
  <div>ğŸ“ Murdeshwar</div>
</header>

<div class="search">
  <input id="searchInput" placeholder="Search workers, rooms, food...">
</div>

<div class="categories">
  <div class="cat active" onclick="show('workers',this)">ğŸ‘¨â€ğŸ”§ Workers</div>
  <div class="cat" onclick="show('rooms',this)">ğŸ¨ Rooms</div>
  <div class="cat" onclick="show('food',this)">ğŸ½ Food</div>
  <div class="cat" onclick="show('transport',this)">ğŸš• Transport</div>
</div>

<div class="section" id="workers"></div>
<div class="section" id="rooms" style="display:none"></div>
<div class="section" id="food" style="display:none"></div>
<div class="section" id="transport" style="display:none"></div>

<p id="noResults">No results found</p>

<script>
const data = {
  workers:[{
    name:"Ramesh Naik", emoji:"ğŸ‘¨â€ğŸ”§", status:"Available",
    details:"Plumber â€¢ Near Temple â€¢ 10 min",
    phone:"9999999999"
  }],
  rooms:[{
    name:"Sea View Lodge", price:"â‚¹1200/night",
    details:"AC â€¢ Near Temple", phone:"7777777777"
  }],
  food:[{
    name:"Sri Krishna Hotel", rating:"â­4.5",
    details:"South Indian â€¢ Veg", phone:"5555555555"
  }],
  transport:[{
    name:"Ravi Taxi", status:"Available",
    details:"Local & Outstation", phone:"3333333333"
  }]
};

function card(title,status,details,phone){
  return `
  <div class="card">
    <div class="card-top"><b>${title}</b><span>${status}</span></div>
    <div class="card-details">${details}</div>
    <div class="actions">
      <a href="tel:${phone}"><button class="call">ğŸ“ Call</button></a>
    </div>
  </div>`;
}

function load(){
  workers.innerHTML=data.workers.map(w=>card(`${w.emoji} ${w.name}`,w.status,w.details,w.phone)).join("");
  rooms.innerHTML=data.rooms.map(r=>card(`ğŸ¨ ${r.name}`,r.price,r.details,r.phone)).join("");
  food.innerHTML=data.food.map(f=>card(`ğŸ½ ${f.name}`,f.rating,f.details,f.phone)).join("");
  transport.innerHTML=data.transport.map(t=>card(`ğŸš• ${t.name}`,t.status,t.details,t.phone)).join("");
}
load();

function show(id,el){
  document.querySelectorAll(".section").forEach(s=>s.style.display="none");
  document.getElementById(id).style.display="block";
  document.querySelectorAll(".cat").forEach(c=>c.classList.remove("active"));
  el.classList.add("active");
  noResults.style.display="none";
}

searchInput.onkeyup=()=>{
  const val=searchInput.value.toLowerCase();
  const cards=document.querySelectorAll(".section:not([style*='none']) .card");
  let found=false;
  cards.forEach(c=>{
    const m=c.innerText.toLowerCase().includes(val);
    c.style.display=m?"block":"none";
    if(m)found=true;
  });
  noResults.style.display=found?"none":"block";
};
</script>

</body>
</html>
